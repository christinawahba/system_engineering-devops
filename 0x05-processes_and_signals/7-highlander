#!/usr/bin/env bash
# A Bash script that continuously displays "To infinity and beyond" and catches the SIGTERM signal.

# Function to handle SIGTERM signal
handle_sigterm() {
    echo "I am invincible!!!"
}

# Trap the SIGTERM signal (signal 15) and call the function
trap 'handle_sigterm' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
