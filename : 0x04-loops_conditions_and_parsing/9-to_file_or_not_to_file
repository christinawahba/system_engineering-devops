#!/usr/bin/env bash
# A Bash script that provides detailed information about a file named 'school' using file test operators.

FILENAME="school"

# 1. Check for existence
if [ -e "$FILENAME" ]; then
    echo "$FILENAME file exists"

    # Further checks if the file exists
    
    # Check for emptiness
    if [ -s "$FILENAME" ]; then
        echo "$FILENAME file is not empty"
    else
        echo "$FILENAME file is empty"
    fi

    # Check for regular file type
    if [ -f "$FILENAME" ]; then
        echo "$FILENAME is a regular file"
    # Note: No 'else' needed here for the non-regular file check as per requirement
    fi
else
    echo "$FILENAME file does not exist"
fi
